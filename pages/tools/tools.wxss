/* pages/tools/tools.wxss */
.container {
  padding:0 20rpx;
}
.my-swiper {
  height: 300rpx;
}
.tab-box {
  height: calc(100% - 300rpx);
  display: grid;
  grid-template-rows: repeat(6, 1fr);
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 20rpx;
  box-sizing: border-box;
  padding: 25rpx 0;
}
.box-item {
  border-radius: 15rpx;
  border: 1px solid #818181;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item-box {
  width: 92%;
  height: 78%;
  border-radius: 20rpx;
  border: 2rpx dashed #858257;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 0 5%;
}
.tab-title {
  color: #BF4855;
  font-size: 30rpx;
  font-weight: bold;
}
.item-box image {
  width: 81rpx;
  height: 100%;
}